/* components/common-card/common-card.wxss */
.card {
  padding: 30rpx;
  background-color: transparent;
}

.title {
  display: inline-block;
  width: 200rpx;
  height: 70rpx;
  margin-bottom: 10rpx;
  line-height: 74rpx;
  font-weight: bold;
  color: #9f0a04;
  text-indent: 30rpx;
  /*text-align: center;*/
  background-image: url("data:image/png;base64,");
  background-repeat: no-repeat;
  background-size: contain;
}

.content {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}