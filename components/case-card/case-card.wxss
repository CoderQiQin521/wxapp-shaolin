/* components/case-card/case-card.wxss */
.connect {
  position: relative;
  text-align: center;
  height: 400rpx;
  overflow: hidden;
}

.connect .thumbs image {
  height: 400rpx;
  width: 100%;
}

.connect.low {
  height: 240rpx;
}

.connect.low .thumbs image {
  height: 240rpx;
  width: 100%;
}

.titles {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 26rpx;
  width: 100%;
  height: 52rpx;
  line-height: 52rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, .6)
}


